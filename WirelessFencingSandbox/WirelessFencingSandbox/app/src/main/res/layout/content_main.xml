<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.stanfield.eric.wirelessfencingsandbox.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#000000">
<!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />
-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/redButton"
        android:textSize="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/border"
        android:textColor="#FFFFFF"
        android:width="150dp"
        android:height="150dp"
        android:minHeight="150dp"
        android:minWidth="150dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/greenButton"
        android:layout_alignParentEnd="true"
        android:textSize="24dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/border"
        android:layout_alignParentBottom="true"
        android:width="150dp"
        android:height="150dp"
        android:minWidth="150dp"
        android:minHeight="150dp" />

    <Button
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:text="Start Match"
        android:id="@+id/startButton"
        android:enabled="false"
        android:layout_above="@+id/haltButton"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/border_light"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:id="@+id/redDisconnect"
        android:enabled="false"
        android:textSize="20dp"
        android:background="@drawable/border_light"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/redButton"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="5dp"
        android:layout_alignStart="@id/redButton"
        android:width="150dp"
        android:height="45dp"
        android:minHeight="45dp"
        android:minWidth="150dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:id="@+id/greenDisconnect"
        android:layout_alignEnd="@+id/greenButton"
        android:layout_alignParentStart="false"
        android:enabled="false"
        android:textSize="20dp"
        android:background="@drawable/border_light"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/greenButton"
        android:layout_marginBottom="5dp"
        android:height="45dp"
        android:width="150dp"
        android:minHeight="45dp"
        android:minWidth="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="logs will appear here ...\n"
        android:id="@+id/logView"
        android:scrollbars="vertical"
        android:gravity="bottom"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/periodText"
        android:textColor="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:height="300dp"
        android:width="500dp"
        android:layout_alignParentEnd="true"
        android:minHeight="75dp"
        android:minWidth="500dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Halt"
        android:id="@+id/haltButton"
        android:layout_alignParentBottom="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/border_light"
        android:textSize="32dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:width="200dp"
        android:height="80dp"
        android:layout_toEndOf="@id/redButton"
        android:layout_toStartOf="@id/greenButton"
        android:minWidth="150dp"
        android:minHeight="80dp"
        android:enabled="false" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="00:00"
        android:id="@+id/timerText"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="48dp"
        android:layout_above="@+id/startButton"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="15dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="   "
        android:id="@+id/periodText"
        android:layout_above="@+id/timerText"
        android:layout_alignStart="@+id/timerText"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />
<!--
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:text="Test"
        android:id="@+id/test"
        android:layout_above="@+id/greenDisconnect"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:textColor="#FFFFFF"
        android:background="@drawable/border"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp" />
-->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="0"
        android:id="@+id/redCardsRedButton"
        android:background="#ff0000"
        android:alpha=".5"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:layout_alignStart="@+id/redCardsYellowButton"
        android:layout_alignBottom="@+id/timerText" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="0"
        android:id="@+id/greenCardsRedButton"
        android:background="#ff0000"
        android:alpha=".5"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:layout_toEndOf="@+id/timerText"
        android:layout_alignBottom="@+id/timerText" />
<!--
    <Button
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:text="Log"
        android:id="@+id/showLogButton"
        android:layout_toStartOf="@+id/test"
        android:background="@drawable/border"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/greenDisconnect"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp" />
-->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="0"
        android:id="@+id/redCardsYellowButton"
        android:background="#ffff00"
        android:alpha=".5"
        android:textSize="18dp"
        android:layout_toStartOf="@id/timerText"
        android:layout_below="@+id/redCardsRedButton"
        android:layout_marginTop="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="0"
        android:id="@+id/greenCardsYellowButton"
        android:background="#ffff00"
        android:alpha=".5"
        android:textSize="18dp"
        android:layout_toEndOf="@id/timerText"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/greenCardsRedButton" />
<!--
    <Switch
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="ELIMINATION"
        android:id="@+id/matchTypeSwitch"
        android:switchPadding="0dp"
        android:switchMinWidth="50dp"
        android:textSize="14dp"
        android:layout_alignParentStart="false"
        android:paddingLeft="5dp"
        android:textColor="#FFFFFF"
        android:showText="false"
        android:textOff="Off"
        android:textOn="On"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/redDisconnect"
        android:background="@drawable/border"
        android:paddingRight="5dp" />
-->
    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/redGroundButton"
        android:layout_alignTop="@+id/redButton"
        android:layout_toEndOf="@+id/redButton"
        android:background="@drawable/border_rounded"
        android:layout_margin="2dp"
        android:minHeight="45dp"
        android:minWidth="45dp" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/greenGroundButton"
        android:layout_toStartOf="@+id/greenButton"
        android:layout_margin="2dp"
        android:background="@drawable/border_rounded"
        android:layout_alignTop="@+id/greenButton"
        android:minHeight="45dp"
        android:minWidth="45dp" />

</RelativeLayout>
